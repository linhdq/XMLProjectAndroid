<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ldz.fpt.xmlprojectandroid">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/loto_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/loto_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".acitivity.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".acitivity.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".acitivity.LoginActivity" />
        <activity android:name=".acitivity.DetailDataActivity" />
        <activity android:name=".acitivity.ProfileActivity" />
        <activity android:name=".acitivity.SettingActivity" />
        <activity android:name=".acitivity.ReportActivity" />
    </application>

</manifest>